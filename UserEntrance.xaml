<UserControl x:Class="QuizGame.UserEntrance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizGame"
             mc:Ignorable="d" 
             d:DesignHeight="640" d:DesignWidth="360" Background="LightBlue" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Border Margin="15,110,15,110" CornerRadius="10" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="130"/>
                <RowDefinition Height="130"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Heading row-->
            <Grid Grid.Row="0" Margin="250,15,15,15">
                <Button Content="In Swedish">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="5" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Heading -->
            <Grid Grid.Row="1" Margin="20">
                <TextBlock Text="What is your name:" 
                   FontWeight="Bold" 
                   VerticalAlignment="Bottom" 
                   HorizontalAlignment="Center"/>
            </Grid>

            <!-- Name input area -->
            <Grid Grid.Row="2" Margin="20">
                <StackPanel HorizontalAlignment="Center">

                    <!-- TextBox with rounded corners -->
                    <Border CornerRadius="10" BorderBrush="LightGray" BorderThickness="1">
                        <Grid>
                            <TextBox x:Name="NameInput"
                             Width="200" Height="30"
                             FontSize="14"
                             TextAlignment="Center"
                             Background="White"
                             BorderThickness="0"
                             TextChanged="NameInput_TextChanged"/>

                            <!-- Placeholder text -->
                            <TextBlock x:Name="PlaceholderText"
                               Text="Enter your name..."
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>
                        </Grid>
                    </Border>

                    <!-- Rounded button -->
                    <Button Content="Confirm"
                    Width="100" Height="30"
                    Margin="0,10,0,0"
                    Background="LightBlue"
                    Foreground="Black"
                    BorderThickness="0"
                    Click="Confirm_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10"
                                Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Greeting text -->
                    <TextBlock x:Name="GreetingText"
                       FontSize="16"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
